{
    "extends": "./tsconfig",
    "compilerOptions": {
      "target": "esnext",
      "outDir": "build/module",
      "module": "esnext"
    },
    "exclude": [
      "node_modules/**",
      // typescript-starter: exclude CLI from module build, since it's exclusively
